<% provide(:title, "Sign Up") %>
<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card">
      <div class="card-header">
				<h3>Sign In</h3>
			</div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><%= fa_icon "envelope" %></span>
						</div>

            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
					</div>

          <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><%= fa_icon "key" %></span>
						</div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
					</div>


          <% if devise_mapping.rememberable? %>
            <div class="row align-items-center remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>

          <% end %>

          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-success float-right" %>
					</div>

        <% end %>
      </div>

      <div class="card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<div class="post-card">
  <h3 class="comment-h3">Comments</h3>
  <hr/>
  <% @post.comments.each do |comment| %>
    <div class="card card-body">
      <p class="post-body" ><%= comment.body %></p>
      <p class="post-body" ><i style="color:gray;">Created on </i><%= comment.created_at.strftime("%b %d, %Y") unless comment.created_at.nil? %> <i style="color:gray;">by </i> <%= comment.username %></p>
    </div>
  <% end %>
</div>

<div class="post-card">
  <% @posts.each do |post| %>
    <div class="card card-body bg-light">
      <h3 ><%= post.title %></h3>
      <p><%= post.body %></p>
      <hr />
      <p><%= post.created_at %></p>
      <div>
        <%= link_to 'Read More...', post_path(post), :class => 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>
